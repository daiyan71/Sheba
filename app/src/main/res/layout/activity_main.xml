<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_margin="2dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:orientation="horizontal"
        android:background="@drawable/layout1_gradient">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name2Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ADADAD"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#f5efef"

                />
            <TextView
                android:id="@+id/email2Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="ADADAD"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#f5efef"

                />


        </LinearLayout>


        <Button
            android:id="@+id/signoutId"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="SIGN OUT"
            android:background="#eef2f2"
            android:drawableLeft="@drawable/signout"
            />




    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:orientation="vertical"
            android:background="@drawable/layout3_gradient"
            >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/carWashId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="10dp"
                                android:src="@drawable/carwash" />

                            <TextView
                                android:layout_width="93dp"
                                android:layout_height="39dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="Car Wash"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/carRentalId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="10dp"
                                android:src="@drawable/carrent" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="Car Rental"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/driverId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="10dp"
                                android:src="@drawable/driver" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="On Demand Driver"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/shiftingId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="10dp"
                                android:src="@drawable/shifting" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="Shifting"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/tutorId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="10dp"
                                android:src="@drawable/tutor" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:text="Tutor"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>




</LinearLayout>

