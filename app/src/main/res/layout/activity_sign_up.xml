<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/layout3_gradient"
    android:gravity="center"
    >


    <Button
        android:id="@+id/takeServiceId"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#ebf4f5"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Take Services"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#68b1e9"
        />

    <Button
        android:id="@+id/beServiceId"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#82beec"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Be A service provider"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#f2f0cd"

        />


</LinearLayout>