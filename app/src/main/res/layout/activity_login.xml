<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/layout3_gradient"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/sbd" />

    <EditText
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Email11Id"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="12dp"
        android:textColor="#383939"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#383939"
        />


    <EditText
        android:layout_marginHorizontal="30dp"
        android:id="@+id/password11Id"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="12dp"
        android:textColor="#383939"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#383939"
        />


    <Button
        android:id="@+id/loginButtonId"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="#a3ddf4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#383939"
        />

    <Button
        android:id="@+id/signUpButtonId"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#8ad7fd"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Sign up"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#383939"

        />






</LinearLayout>