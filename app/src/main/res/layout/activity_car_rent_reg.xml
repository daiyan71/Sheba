<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout3_gradient"
    android:orientation="vertical"
    tools:context=".CarWashReg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Give Details"
        android:textStyle="bold"
        android:textSize="30dp" />
    <View
        android:layout_marginTop="30dp"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="#150e0e">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#190160"
        android:text="Enter the amount you charge per hour"
        android:textSize="20dp" />
    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="#150e0e">
    </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sedan (1-4)"
                android:textColor="#060443"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/sedanId"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Enter value"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noah (1-8)"
                android:textColor="#060443"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/noahId"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Enter value"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hiace(1-12)"
                android:textColor="#060443"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/hiaceId"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Enter value"
                android:layout_marginBottom="130dp"
                android:inputType="number" />



            <Button
                android:id="@+id/signUpButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="#8ad7fd"
                android:text="Signup"
                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>